%h1 Listing users

%table.table
  %thead
    %tr
      %th Email
      %th Password
      %th First name
      %th Last name
      %th Organisation
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.password
        %td= user.first_name
        %td= user.last_name
        %td= user.organisation
        %td= link_to 'Показати', user
        %td= link_to 'Змінити', edit_user_path(user)
        %td= link_to 'Видалити', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

